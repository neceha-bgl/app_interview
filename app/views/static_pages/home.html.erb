<% if signed_in?%>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info'%>
		</section>
		<section>
			<%= render 'shared/stats'%>
		</section>
		<section>
			<%= render 'shared/micropost_form'%>
		</section>
	</aside>
	<div class="span8">
		<h3>Micropost Feed</h3>
		<%= render 'shared/feed'%>
	</div>
</div>	

<% else%>
<div class="center hero-unit">
	<h1>Welcome to the Sample App</h1>

	<h2>
		This is the home page for the
		<a href="http://www.youtube.com/watch?v=-aBJxYxo1HU">Surf lessons app</a>.
	</h2>

	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<div class="center">
<%= link_to image_tag("kelly_slater.jpg", alt: "Kelly Slater"), 
'http://en.wikipedia.org/wiki/Kelly_Slater' %>
</div>

<% end %>
