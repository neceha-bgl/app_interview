<li class="span3" data-id="<%= user.id %>">
  <div class="thumbnail">
    <h4> <i class="icon-move icon-white"> </i> <%= user.name %> </h4>
      
    <div class="caption">
      <%= gravatar_for user, size: 30 %>
      <dl class="dl-horizontal">
        <dt>Email</dt>
        <dd> <%= user.email %> </dd>

        <dt>Created at</dt>
        <dd> <%= user.created_at %> </dd>
        <dt>Updated at</dt>
        <dd> <%= user.updated_at %> </dd>
      </dl>
      
      <p>
	      <% if current_user.admin? && !current_user?(user)%> 
	        <%= link_to "Delete", user, method: :delete, confirm: "Are you sure?", class: "btn btn-danger"%>
	      <% end%> 
        <%= link_to "Show", user, class: "btn btn-primary" %>
      </p>
    </div>
  </div>
</li>
